* {
    background-color: #1d0d1d;
    border-color:     #eb0000;
    text-color:       #ff7af3 ;
    font:             "Times New Roman 10";
}

window {
    anchor:     north;
    location:   north;
    width:      100%;
    padding:    6px;
    children:   [ horibox ];
}

horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
}

listview {
    layout:  horizontal;
    spacing: 25px;
    lines:   100;
}

entry {
    expand: false;
    width:  15em;
}

element {
    padding: 2px 2px;    
}

element selected {
    background-color: #ff7af3;
    text-color:       #1d0d1d;
}

element-text, element-icon {
  background-color: inherit;
  text-color: inherit;
}
