###############################################################
#   🅲 🅷 🅰 🅽 🅳 🅴 🆁
#   ---------------------------------------------------
#   Chander's broot customization and preferences
###############################################################

default_flags: ghiDSP
show_selection_mark: true
quit_on_last_cancel: true
content_search_max_file_size: 10MB

###############################################################
# Verbs
###############################################################
verbs: [
    {
        key: ctrl-D
        cmd: ":dates"
        leave_broot: false
    }
    {
        key: ctrl-S
        cmd: ":size"
        leave_broot: false
    }
    {
        key: ctrl-A
        cmd: ":perm;:size;:dates"
        leave_broot: false
    }
    {
        invocation: panel
        key: ctrl-P
        cmd: ":toggle_preview"
    }
    {
        invocation: edit
        key: ctrl-E
        external: 'open -n "/Applications/Visual Studio Code.app" --args {file}'
        leave_broot: false
    }
]

###############################################################
# Imports
###############################################################
imports: [
    verbs.hjson
    skins/dark-gruvbox.hjson
]
